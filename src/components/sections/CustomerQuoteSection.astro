---
import Container from '../core/Container.astro';

const {quoteText, customerName} = Astro.props;
---

<section class="customer-quote__section">
  <Container narrow>
    <blockquote>"{quoteText}"</blockquote>
    <p>&mdash; {customerName}</p>
  </Container>
</section>

  <style>
.customer-quote__section {
  margin: calc(var(--section-margin) * 2) auto;
  padding: 3rem;
  background-color: var(--theme-surface-1);
  text-align: center;
}
.customer-quote__section blockquote {
  padding: 0;
  border: none;
  font-size: var(--font-size-md);
  font-weight: 400;
  font-style: italic;
  line-height: 1.8;
}
</style>